{
    "name": "dereuromark/cakephp-fixture-factories",
    "description": "CakePHP Dynamic Fixtures",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "tests", "dynamic", "fixtures", "dev", "cli"],
    "authors": [
        {
            "name": "Mark Scherer",
            "email": "euromark@web.de"
        },
        {
            "name": "Nicolas Masson",
            "email": "nicolas@b-projects.tech"
        },
        {
            "name": "Juan Pablo RamÃ¬rez",
            "email": "pabloelcolombiano@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "cakephp/orm": "^5.0"
    },
    "require-dev": {
        "vierge-noire/cakephp-test-suite-light": "^3.0",
        "johnykvsky/dummygenerator": "^0.0.9",
        "fakerphp/faker": "^1.23",
        "cakephp/bake": "^3.0.0",
        "cakephp/twig-view": "^2.0.2",
        "php-collective/code-sniffer": "dev-master",
        "cakephp/migrations": "^4.7.0",
        "josegonzalez/dotenv": "^4.0.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^11.5 || ^12.3",
        "vimeo/psalm": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "CakephpFixtureFactories\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakephpFixtureFactories\\Test\\": "tests/",
            "TestApp\\": "tests/TestApp/src/",
            "TestApp\\Test\\Factory\\": "tests/TestApp/tests/Factory/",
            "TestPlugin\\": "tests/TestApp/plugins/TestPlugin/src/",
            "TestPlugin\\Test\\Factory\\": "tests/TestApp/plugins/TestPlugin/tests/Factory/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "mysql": "bash run_tests.sh Mysql \"$@\"",
        "pgsql": "bash run_tests.sh Postgres \"$@\"",
        "sqlite": "bash run_tests.sh Sqlite \"$@\"",
        "stan": "vendor/bin/phpstan analyse --memory-limit=-1",
        "psalm": "vendor/bin/psalm",
        "cs-check": "vendor/bin/phpcs --colors --extensions=php",
        "cs-fix": "vendor/bin/phpcbf --colors --extensions=php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
